{
  "name": "@threefold/ui",
  "version": "2.2.0-rc4",
  "private": false,
  "main": "dist/threefold-ui.umd.js",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only && yarn tailwind-build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build && yarn tailwind-build",
    "tailwind-build": "yarn tailwind build -o dist/tailwind.css",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
  },
  "dependencies": {
    "@polkadot/keyring": "^12.4.2",
    "@threefold/extension_api": "^0.0.1-rc6",
    "axios": "1.5.0",
    "buffer": "^6.0.3",
    "crypto-js": "^4.2.0",
    "html-parsed-element": "^0.4.1",
    "md5": "^2.3.0",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vue3-pdfjs": "^0.1.6"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.0",
    "@types/crypto-js": "^4.2.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.17.5",
    "@vitejs/plugin-vue": "^4.3.1",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.15",
    "cypress": "^12.17.4",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "pdfjs-dist": "^3.10.111",
    "postcss": "^8.4.29",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.2",
    "vue-tsc": "^1.8.8"
  }
}
